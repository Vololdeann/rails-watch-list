<div class="container mb-5">
  <div class="jumbotron" style="background-image: url(<% @bookmarks.first.movie.poster_url %>)>
    <p class="lead"><strong>Save any kind of films!</strong></p>
    <hr class="my-4">
  </div>

  <h1><%= @list.name %></h1>
  <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "delete this list", list_path(:id_list), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  <%= link_to "back to my lists", lists_path(@list) %>  <i class="fa-solid fa-arrow-rotate-left"></i>

  <% @bookmarks.each do |bookmark| %>
    <div class="card-product">
      <img src="<%= bookmark.movie.poster_url%>">
        <div class="card-product-infos">
          <h2><strong><%= bookmark.movie.title %></strong></h2>
          <p><%= bookmark.movie.rating %><i class="fas fa-star star-yellow"></i></span></strong></p>
          <p><%= bookmark.movie.overview %></p>
          <p>Comments: <%= bookmark.comment %></p>
        </div>
    </div>
  <% end %>
  </div>
